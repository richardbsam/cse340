<%- include('../layouts/layout') %>

<%- block content %>
  <div class="register-container">
    <h1><%= title %></h1> <!-- Dynamically set the title -->

    <!-- Flash message if available -->
    <% if (flashMessage) { %>
      <div class="flash-message">
        <%= flashMessage %>
      </div>
    <% } %>

    <!-- Registration Form -->
    <form action="/account/register" method="POST">
      <div class="form-group">
        <label for="account_first_name">First Name</label>
        <input type="text" id="account_first_name" name="account_first_name" placeholder="Enter your first name" required>
      </div>

      <div class="form-group">
        <label for="account_last_name">Last Name</label>
        <input type="text" id="account_last_name" name="account_last_name" placeholder="Enter your last name" required>
      </div>

      <div class="form-group">
        <label for="account_email">Email Address</label>
        <input type="email" id="account_email" name="account_email" placeholder="Enter your email" required>
      </div>

      <div class="form-group">
        <label for="account_password">Password</label>
        <input type="password" id="account_password" name="account_password" 
               placeholder="Enter your password" 
               required minlength="12" 
               pattern="(?=.*[A-Z])(?=.*\d)(?=.*[!@#$%^&*])"
               title="Must be at least 12 characters long, contain at least one uppercase letter, one number, and one special character.">
      </div>

      <!-- Toggle Password Visibility Button -->
      <button type="button" onclick="togglePassword()">Show/Hide Password</button>

      <button type="submit">Register</button>
    </form>

    <!-- Link to login view if user already has an account -->
    <p>Already have an account? <a href="/account/login">Login here</a></p>
  </div>

  <script>
    function togglePassword() {
      const passwordField = document.getElementById('account_password');
      const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
      passwordField.setAttribute('type', type);
    }
  </script>

  <!-- Link to CSS file -->
  <link rel="stylesheet" href="/css/register.css">

<%- endblock %>
