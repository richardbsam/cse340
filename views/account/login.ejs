
<%- include('../layouts/layout') %>


<%- block content %>
  <div class="login-container">
    <h1><%= title %></h1> <!-- Dynamically set the title -->

    <!-- Flash message if available -->
    <% if (flashMessage) { %>
      <div class="flash-message">
        <%= flashMessage %>
      </div>
    <% } %>

    <% if (errors) { %>
      <ul class="notice">
     <% errors.array().forEach(error => { %>
       <li><%= error.msg %></li>
    <%  }) %>
     </ul>
    <% } %

    <!-- Login Form -->
    <form id="loginForm" action="/account/login" method="post"></form>
      <div class="form-group">
        <label for="account_email">Email Address</label>
        <input type="email" id="account_email" name="account_email" placeholder="Enter a valid email Address" required>
      </div>

      <div class="form-group">
        <label for="account_password">Password</label>
        <input type="password" id="account_password" name="account_password" placeholder="Enter your password" required
        required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
      </div>

      <button type="submit">Login</button>
    </form>

    <!-- Link to registration view if user does not have an account -->
    <p>Don't have an account? <a href="/account/register">Sign up here</a></p>
  </div>
  
 <!-- Link to CSS file -->
 <link rel="stylesheet" href="/css/login.css">

<%- endblock %>
